.guide-page__container {
  height: 100%;
  width: 100%;
}

.guide-page__firstpart, .guide-page__secondpart {
  display: flex;
  justify-content: center;
  position: absolute;
  width: 100%;
  height: 100%;
}

.guide-page__next {
  position: absolute;
  bottom: 0;
}

.guide-page__firstpart--content {
}

.guide-page__firstpart--content text {
  display: flex;
  justify-content: center;
  flex-grow: 1;
}

.guide-page__firstpart--logo {
  display: flex;
  justify-content: center;
  margin-top: 300rpx;
}

.guide-page__firstpart--logo image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
}
