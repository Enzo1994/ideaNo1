/* miniprogram/components/lebel-select/label-select.wxss */

page {
  overflow: hidden;
}

.label-select__container {
  position: absolute;
  bottom: -800rpx;
  z-index: 2999;
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  box-shadow: 5rpx -5rpx 10rpx #aaa;
  background-color: white;

}

.label-select__slider {
  margin:15rpx auto;
  width: 20%;
  padding: 15rpx 30rpx;
  height:50rpx;


}
.label-select__slider .slider-button {
  width: 100%;
  height: 100%;
    border-radius: 50rpx;
    box-shadow: 4rpx 4rpx 8rpx #aaa;
  border: 1px solid #ccc;
}
.label-list__container {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  z-index: 9999;
  padding: 20rpx;
  justify-content: space-around;
  align-content: space-between;
  width: 100%;
}

.label-list__container view {
  width: 160rpx;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
}

.label-list__container view text {
  display: flex;
  justify-content: center;
}
