<import src="../../../we-cropper/we-cropper.wxml" />
<view class="cropper-wrapper h100">
  <template is="we-cropper" data="{{...cropperOpt}}" />
  <view class="cropper-buttons h100 " style="background-color:rgba(0,0,0,1);color: {{cropperOpt.boundStyle.color}}">
    <text type="primary" class="getCropperImage btn" catchtap="getCropperImage">完成</text>
    <text type="primary" class="getCropperImage btn" catchtap="cancelCropperImage">取消</text>
  </view>
</view>