/* miniprogram/pages/input-diary/input-diary.wxss */

page {
  background-color: #fff;
}

.input-diary__date{
  margin: 20rpx 30rpx;
  display: block;
}
.input-diary__textarea::before{
  content:'';
  position: absolute;
    width:100%;
  height:0px;
  border-top: 1px solid black;
}
.input-diary__textarea textarea,.input-diary__textarea text{
  display: block;
  height: 200rpx;
  width: 100%;
  line-height: 1em;
  box-sizing: border-box;
}

.input-diary__images--empty {
  display: inline-block;
  text-align: center;

  flex-shrink: 0;
  margin-right: 20rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #eee;
  color: #fff;
  font-weight: bold;
  font-size: 200rpx;
  line-height: 160rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.input-diary__images {
  padding: 30rpx 20rpx 20rpx;
  display: flex;
  align-content: center;
  align-items: stretch;
  overflow-x: auto;
}

.input-diary__images image {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin:0 30rpx 0 0;
  flex-shrink: 0;
  overflow: visible;
}

.input-diary__images image i {
  vertical-align: middle;
  text-align: center;
  position: absolute;
  right: -20rpx;
  top: -16rpx;
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
  background-color: #FF6666  ;
  color: white;
  font-size: 40rpx;
  font-weight: lighter;
  line-height: 40rpx;
}