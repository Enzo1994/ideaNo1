/* miniprogram/pages/input-diary/input-diary.wxss */

page {
  background-color: #fff;
}

.input-diary__textarea{
  padding: 30rpx;
}
.input-diary__textarea textarea{
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #eee;
  border-radius: 30rpx;
  box-shadow: 10rpx 10rpx 30rpx #ccc;
}

.empty-image {
  margin-right: 20rpx;
  padding-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  color: #fff;
  font-weight: bold;
  font-size: 200rpx;
  line-height: 1;
  font-family: Arial, Helvetica, sans-serif;
}

.input-diary__images {
  display: flex;
  flex-wrap:wrap;
  padding: 30rpx 0 0 50rpx;
  align-content: center;
  align-items: stretch;
  width: 100%;
}

.input-diary__images image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin:0 30rpx 30rpx 0;
}
