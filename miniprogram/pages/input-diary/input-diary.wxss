/* miniprogram/pages/input-diary/input-diary.wxss */

page {
  background-color: #fff;
}

.input-diary__textarea {
  width: 100%;
  border: 1px solid red;
}

.empty-image {
  margin-right: 20rpx;
  padding-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  color: #fff;
  font-weight: bold;
  font-size: 200rpx;
  line-height: 200rpx;
}

.input-diary__images {
  display: flex;
  padding: 30rpx 0 0 50rpx;
  align-content: center;
  align-items: stretch;
  width: 100%;
}

.input-diary__images image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
