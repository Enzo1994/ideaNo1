/* miniprogram/pages/input-diary/input-diary.wxss */

page {
  background-color: #fff;
}

.input-diary__date{
  margin: 20rpx 30rpx;
  display: block;
}
.input-diary__textarea::before{
  content:'';
  position: absolute;
    width:100%;
  height:0px;
  border-top: 1px solid black;
}
.input-diary__textarea textarea{
  z-index:-999;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-diary__images--empty {
  margin-right: 20rpx;
  padding-left: 40rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  color: #fff;
  font-weight: bold;
  font-size: 200rpx;
  line-height: 1;
  font-family: Arial, Helvetica, sans-serif;
}

.input-diary__images {
  display: flex;
  flex-wrap:wrap;
  padding: 30rpx 0 0 50rpx;
  align-content: center;
  align-items: stretch;
  width: 100%;
}

.input-diary__images image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin:0 30rpx 30rpx 0;
}
