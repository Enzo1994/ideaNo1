 .swiper-item text {
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.swiper-item text:nth-child(2) {
  font-size: 40rpx;
  font-weight: 800;
} 

.timeline {
  width: 100%;
  box-sizing: border-box;
}

.timeline .item {
  position: relative;
  width: 100%;
}

.timeline .line {
  position: absolute;
  left: 100rpx;
  height: 100%;
  border-left: 1px solid black;
}

.timeline .icon {
  position: absolute;
  left: 78rpx;
  top: 80rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: red;
  border-radius: 50%;
}

.timeline .item .content {
  position: relative;
  top: -10rpx;
  padding: 100rpx 100rpx 100rpx 150rpx;
}

.timeline .diary-detail {
  margin-top: 30rpx;
  width: 500rpx;
}

.cu-timeline .cu-item image {
  margin: 0 15rpx 15rpx 0;
  width: 167rpx;
  height: 167rpx;
  vertical-align: middle;
}
