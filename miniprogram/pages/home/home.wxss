/* miniprogram/pages/home/home.wxss */

.container {
  width: 100%;
  height: 100%;
}

.label-card {
  /* padding: 50rpx 80rpx 50rpx 80rpx; */
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
}

.label-card {
  transition: all 1s ease;
}

.label-card__body {
  height: 100%;
  width: 100%;
  /* border-radius: 30rpx; */
  background-image: linear-gradient(to top, #f77062 0%, #fe5196 100%);
  box-shadow: 20rpx 10px 20rpx #eee;
}
.pet-avatar{
  width: 200rpx;
  height: 200rpx;
}

.timeline {
  width: 100%;
  box-sizing: border-box;
  /* border: 1px solid red */
}
.timeline .item{

  position: relative;
  width: 100%;
}
.timeline .line{
  position: absolute;
  left: 100rpx;
  height: 100%;
  border-left: 1px solid black;
}
.timeline .icon{
  position: absolute;
  left: 78rpx;
  top: 80rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: red;
  border-radius: 50%;
}
.timeline .item .content{
  position: relative;
  top:-10rpx;
  padding:  100rpx 100rpx 100rpx 150rpx;
}

.timeline .diary-detail{
  margin-top: 30rpx;
  width: 500rpx;
}

.timeline .diary-detail image{
  margin: 0 15rpx 15rpx 0;
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
}